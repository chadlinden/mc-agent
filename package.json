{
  "name": "mc-agent",
  "version": "2.0.0",
  "type": "module",
  "description": "AI-powered Minecraft bot using local LLM inference",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && tsx src/index.ts",
    "start:dev": "tsx --watch src/index.ts",
    "start:prod": "node dist/src/index.js",
    "test:llm": "tsx src/ai/llm.ts --test",
    "typecheck": "tsc --noEmit",
    "legacy": "node app/examples/test-bot.js"
  },
  "keywords": ["minecraft", "ai", "bot", "mineflayer", "llm"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.5",
    "mineflayer": "^4.33.0",
    "mineflayer-pathfinder": "^2.4.5",
    "minecraft-data": "^3.69.0",
    "node-llama-cpp": "^3.1.1",
    "prismarine-block": "^1.22.0",
    "prismarine-item": "^1.17.0",
    "vec3": "^0.1.10"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
